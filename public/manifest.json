{
  "manifest_version": 2,
  "name": "SDO Tests Helper",
  "description": "Помощник для выполнения тестов SDO SRSPU.",
  "version": "0.2.1",
  "author": "SpringFlash",
  "browser_action": {
    "default_title": "Ответы к тесту, автоматик",
    "default_icon": "assets/icons/question.png",
    "default_popup": "output.html"
  },
  "icons": {
    "512": "assets/icons/question.png"
  },
  "content_scripts": [
    {
      "matches": [
        "file:///*",
        "https://sdo.srspu.ru/mod/quiz/review*",
        "https://sdo.srspu.ru/mod/quiz/attempt*",
        "https://plp.pfrus.com/mod/quiz/review*"
      ],
      "js": ["scores.js"],
      "css": ["/assets/index.css"]
    },
    {
      "matches": [
        "file:///*",
        "https://sdo.srspu.ru/mod/quiz/attempt*",
        "https://plp.pfrus.com/mod/quiz/attempt*"
      ],
      "js": ["answer.js"],
      "css": ["/assets/index.css"]
    }
  ],
  "permissions": ["clipboardWrite", "storage", "https://jsonplaceholder.typicode.com/*"],
  "web_accessible_resources": ["/assets/*"]
}
